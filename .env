# VaultScope Environment Configuration

# Real-time Data Sources
VITE_ENABLE_REAL_TIME_DATA=true

# Exchange API Endpoints (Public APIs - no keys required)
VITE_OKX_BASE_URL=https://www.okx.com
VITE_GATEIO_BASE_URL=https://api.gateio.ws
VITE_BINANCE_WS_URL=wss://stream.binance.com:9443/ws

# CoinGecko API (Free tier)
VITE_COINGECKO_API_URL=https://api.coingecko.com/api/v3

# Data refresh intervals (milliseconds)
VITE_PRICE_UPDATE_INTERVAL=30000
VITE_WEBSOCKET_RECONNECT_INTERVAL=5000

# Fallback settings
VITE_USE_STATIC_FALLBACK=true
VITE_MAX_RETRY_ATTEMPTS=3